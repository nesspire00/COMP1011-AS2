            <Label text="New Sale">
               <font>
                  <Font size="24.0" />
               </font></Label>
            <HBox spacing="10.0">
               <children>
                  <Label text="Sale item:">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="itemNameLabel" prefHeight="18.0" prefWidth="389.0" text="Label">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="67.0" fitWidth="68.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../sale.png" />
                     </image>
                     <HBox.margin>
                        <Insets top="-45.0" />
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
            <GridPane hgap="10.0" vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
