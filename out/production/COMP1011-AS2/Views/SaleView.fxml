               </VBox.margin>
            </GridPane>
            <Label fx:id="messageLabel" text="Label" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                  <Button fx:id="sellButton" mnemonicParsing="false" onAction="#saleButtonPushed" prefWidth="139.0" styleClass="success" text="Make a sale" />
                  <Button mnemonicParsing="false" onAction="#backButtonPushed" styleClass="primary" text="Cancel" />
              </buttons>
